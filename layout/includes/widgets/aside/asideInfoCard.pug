.card-widget.card-info
    .card-content
        .card-info-bg-top
            .is-center
                .author-info__top-group
                    .author-info__sayhi#author-info__sayhi(onclick="sco.changeWittyWord()")
        a.card-info-avatar(href=url_for(theme.aside.my_card.url) title=_p('aside.avatar'))
            .avatar-img
                img(src=theme.aside.my_card.author.img alt=_p('aside.avatar'))
            if theme.aside.my_card.author.sticker
                .avatar-sticker
                    img.avatar-sticker-img(src=theme.aside.my_card.author.sticker, alt=_p('aside.sticker'))
        .card-info__desc_group
            .author-info__name= config.author
            .author-info__desc!= config.subtitle

            .card-info__data.is-center
                if theme.aside.siteinfo.runtimeenable
                    span
                        .headline= _p('aside.runtime')
                        .length-num#runtimeshow
                if theme.aside.siteinfo.updatetime
                    span
                        .headline= _p('aside.updatetime')
                        time.auto-time.length-num(datetime=new Date(), style="display:block;")
                if theme.wordcount && theme.aside.siteinfo.wordcount
                    span
                        .headline= _p('aside.wordcount')
                        .length-num= totalcount(site).toString().replace("k",_p('thousand'))
                //- if site.posts.length !== 0
